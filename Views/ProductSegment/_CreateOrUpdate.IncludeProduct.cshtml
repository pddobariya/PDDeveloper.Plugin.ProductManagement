@model SegmentModel
@using PDDeveloper.Plugin.ProductManagement.Domain.Enums

<input asp-for="Id" type="hidden" />
@if (Model.Id > 0)
{
    <div class="panel-body">
        <div class="sub-panel">

            @await Html.PartialAsync("Table", new DataTablesModel
            {
               Name = "includeProduct-grid",
               UrlRead = new DataUrl("IncludeExcludeProductList", "ProductSegment", new RouteValueDictionary
               {
                   [nameof(Model.IncludeExcludeProductSearchModel.ProductSegmentId)] = Model.Id,
                   [nameof(Model.IncludeExcludeProductSearchModel.ProductType)] = SegmentProductType.Include
               }),
               UrlDelete = new DataUrl("ProductDelete", "ProductSegment", new RouteValueDictionary
                    {
                   [nameof(Model.IncludeExcludeProductSearchModel.ProductSegmentId)] = Model.Id,
                   [nameof(Model.IncludeExcludeProductSearchModel.ProductType)] = SegmentProductType.Include
               }),
               SearchButtonId = "search-includeProduct",
               Length = Model.IncludeExcludeProductSearchModel.PageSize,
               LengthMenu = Model.IncludeExcludeProductSearchModel.AvailablePageSizes,
               ColumnCollection = new List<ColumnProperty>
                        {
                            new ColumnProperty(nameof(IncludeExcludeProductModel.ProductName))
                            {
                                Title = T("Plugins.PDD.ProductManagement.IncludeProduct.Fields.Name").Text
                            },
                            new ColumnProperty(nameof(IncludeExcludeProductModel.ProductType))
                            {
                                Title = T("Plugins.PDD.ProductManagement.IncludeProduct.Fields.ProductType").Text
                            },
                            new ColumnProperty(nameof(IncludeExcludeProductModel.ProductId))
                            {
                                Title = T("Admin.Common.View").Text,
                                Width = "150",
                                ClassName = NopColumnClassDefaults.Button,
                                Render = new RenderButtonView(new DataUrl("~/Admin/Product/Edit/", nameof(IncludeExcludeProductModel.ProductId)))
                            },
                            new ColumnProperty(nameof(IncludeExcludeProductModel.Id))
                            {
                                Title = T("Admin.Common.Delete").Text,
                                Width = "100",
                                ClassName =  NopColumnClassDefaults.Button,
                                Render = new RenderButtonRemove(T("Admin.Common.Delete").Text)
                            }
                        }
            })
        </div>
    </div>
    <div class="panel-footer">
        <button type="submit" id="btnAddNewIncludeProducts"
                onclick="javascript:OpenWindow('@(Url.Action("ProductAddPopup", "ProductSegment", new {productSegmentId = Model.Id, btnId = "btnRefreshIncludeProducts", formId = "productsegment-form",productType= (int)SegmentProductType.Include}))', 800, 800, true); return false;"
                class="btn btn-primary">
            @T("Plugins.PDD.ProductManagement.Segment.Tab.Include.Product.AddNew")
        </button>
        <input type="submit" id="btnRefreshIncludeProducts" style="display: none" />
        <script type="text/javascript">
            $(document).ready(function () {
                $('#btnRefreshIncludeProducts').click(function () {
                    //refresh grid
                    updateTable('#includeProduct-grid');

                    //return false to don't reload a page
                    return false;
                });
            });
        </script>
    </div>
}
else
{
    <div class="panel-body">
        <div class="sub-panel">
            @T("Plugins.PDD.ProductManagement.Segment.Tab.Include.Message")
        </div>
    </div>
}