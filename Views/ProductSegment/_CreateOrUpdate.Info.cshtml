@model ProductSegmentModel

<div class="panel-body">
    <div class="sub-panel">
        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="@Model.Name" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="@Model.Name" />
                <span asp-validation-for="@Model.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="@Model.Description" />
            </div>
            <div class="col-md-9">
                <nop-textarea asp-for="@Model.Description" />
                <span asp-validation-for="@Model.Description"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <nop-label asp-for="@Model.DisplayOrder" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="@Model.DisplayOrder" />
                <span asp-validation-for="@Model.DisplayOrder"></span>
            </div>
        </div>
        <div class="form-group" @(Model.AvailableStores.SelectionIsNotPossible() ? Html.Raw("style=\"display:none\"") : null)>
            <div class="col-sm-3">
                <nop-label asp-for="@Model.StoreId" />
            </div>
            <div class="col-sm-9">
                <nop-select asp-for="@Model.StoreId" asp-items="@Model.AvailableStores" />
                <span asp-validation-for="@Model.StoreId"></span>
            </div>
        </div>
    </div>
</div>
